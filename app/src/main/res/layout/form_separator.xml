<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/leftSeparator"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"

        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"

        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvSeparatorDescription"
        tools:text="Sample Description"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"

        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"

        android:layout_toRightOf="@id/leftSeparator"
        android:layout_toEndOf="@id/leftSeparator"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"

        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"

        android:layout_toRightOf="@id/tvSeparatorDescription"
        android:layout_toEndOf="@id/tvSeparatorDescription"

        android:layout_centerVertical="true"/>

</RelativeLayout>